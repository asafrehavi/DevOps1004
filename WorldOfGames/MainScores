from flask import Flask, request
from Score import get_current_score
import Utils

app = Flask("Test app")


@app.route('/')
def show_scores():
    score = get_current_score()
    if score != Utils.BAD_RETURN_CODE:
        return f"<head> <title>Scores Game</title></head><body><h1>The score is <div >{score}</div></h1></body>"
    else:
        error = "cant get scores"
        return f"<html> <head> <title>Scores Game</title> </head><body><h1><div id=\"score\" style=\"color:red\">{error }</div></h1></body></html>"


app.run(host="0.0.0.0", port=5001, debug=True)
